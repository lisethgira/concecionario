<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.concecionario">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".inicioSesion" />

        <activity android:name=".listadosv">
            <!-- se crea meta data para crear una flecha que nos lleve a la actividad anterior -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".inicioSesion" />
        </activity>
        <activity android:name=".Listado_Vehiculos">
            <!-- se crea meta data para crear una flecha que nos lleve a la actividad anterior -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".referenciasvehiculos" />
        </activity>
        <activity android:name=".referenciasvehiculos">
            <!-- se crea meta data para crear una flecha que nos lleve a la actividad anterior -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".inicioSesion" />
        </activity>
        <activity android:name=".Registrovendedor">
            <!-- se crea meta data para crear una flecha que nos lleve a la actividad anterior -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".inicioSesion" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>